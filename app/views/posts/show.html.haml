= image_tag @post.image
%h1= @post.title
%p= @post.user.email
%p= @post.user.name
%p= @post.link
%p= @post.description
%p= @post.get_upvotes.size
%p= @post.get_downvotes.size
= link_to "Like", like_post_path(@post),method: :get
= link_to "Dislike" , dislike_post_path(@post),method: :get

#comment
  %h2.comment_count= pluralize(@post.comments.count, "Comment")
  - @comments.each do |comment|
    .comment
      %p.username= comment.user.name
      %p.content= comment.content
     
  =render "comments/form"

= link_to "Edit", edit_post_path(@post)
= link_to "Destroy", post_path(@post), method: :delete, data:{ confirm: "Ary you sure?" }
= link_to "Home", root_path